<?xml version="1.0" encoding="utf-8"?>
<oracle>
    <connection>
        <system_user>{{ oracle.sysuser }}</system_user>
        <system_password>{{ hostvars[groups['sut'][0]]['oracle_sysuser_pass'] }}</system_password>
        <instance>{{ oracle.service_name }}</instance>
        <rac>0</rac>
    </connection>
    <tpcc>
        <schema>
            <count_ware>{{ warehouses }}</count_ware>
            <num_vu>{{ v_users }}</num_vu>
            <tpcc_user>{{ hammerdb.user }}</tpcc_user>
            <tpcc_pass>{{ hostvars[groups['sut'][0]]['hammerdb_pass'] }}</tpcc_pass>
            <tpcc_def_tab>{{ hammerdb.tablespace }}</tpcc_def_tab>
            <tpcc_ol_tab>{{ hammerdb.ol_tablespace }}</tpcc_ol_tab>
            <tpcc_def_temp>{{ hammerdb.tablespace }}</tpcc_def_temp>
            <partition>false</partition>
            <hash_clusters>false</hash_clusters>
            <tpcc_tt_compat>false</tpcc_tt_compat>
        </schema>
        <driver>
            <total_iterations>10000000</total_iterations>
            <raiseerror>false</raiseerror>
            <keyandthink>false</keyandthink>
            <checkpoint>false</checkpoint>
            <ora_driver>timed</ora_driver>
            <rampup>{{ rampup_duration }}</rampup>
            <duration>{{ test_duration }}</duration>
            <allwarehouse>false</allwarehouse>
            <ora_timeprofile>false</ora_timeprofile>
            <async_scale>false</async_scale>
            <async_client>10</async_client>
            <async_verbose>false</async_verbose>
            <async_delay>1000</async_delay>
            <connect_pool>false</connect_pool>
        </driver>
    </tpcc>
    <tpch>
        <schema>
            <scale_fact>1</scale_fact>
            <tpch_user>tpch</tpch_user>
            <tpch_pass>tpch</tpch_pass>
            <tpch_def_tab>tpchtab</tpch_def_tab>
            <tpch_def_temp>temp</tpch_def_temp>
            <num_tpch_threads>1</num_tpch_threads>
            <tpch_tt_compat>false</tpch_tt_compat>
        </schema>
        <driver>
            <total_querysets>1</total_querysets>
            <raise_query_error>false</raise_query_error>
            <verbose>false</verbose>
            <degree_of_parallel>2</degree_of_parallel>
            <refresh_on>false</refresh_on>
            <update_sets>1</update_sets>
            <trickle_refresh>1000</trickle_refresh>
            <refresh_verbose>false</refresh_verbose>
            <cloud_query>false</cloud_query>
        </driver>
    </tpch>
</oracle>
